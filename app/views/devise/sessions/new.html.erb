<section class="row flexbox-container">
  <div class="col-12 d-flex align-items-center justify-content-center">
    <div class="col-lg-4 col-md-8 col-10 box-shadow-2 p-0">
      <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
        <div class="card-header border-0">
          <div class="card-title text-center">
            <img src="<%= image_path('logo.png') %>" width="100%" alt="branding logo">
          </div>
        </div>

        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

            <fieldset class="form-group position-relative has-icon-left">
              <%= f.input :email,
                          required: true,
                          label: false,
                          autofocus: true,
                          id: 'user-name',
                          placeholder: "Почта",
                          input_html: { class: 'form-control', autocomplete: "email" } %>
              <div class="form-control-position">
                <i class="la la-user"></i>
              </div>
            </fieldset>


            <fieldset class="form-group position-relative has-icon-left">
              <%= f.input :password,
                          label: false,
                          required: true,
                          id: 'user-password',
                          placeholder: 'Пароль',
                          input_html: { class: 'form-control', autocomplete: "current-password" } %>

              <div class="form-control-position"><i class="la la-key"></i></div>

            </fieldset>
            <div class="form-group row">
              <div class="col-sm-6 col-12 text-center text-sm-left pr-0">
                <fieldset>
                  <%= f.input :remember_me, as: :boolean, label: '⠀запомнить меня?' if devise_mapping.rememberable? %>
                </fieldset>
              </div>
              <div class="col-sm-6 col-12 float-sm-left text-center text-sm-right">
                <a href="recover-password.html" class="card-link">Забыли пароль?</a></div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Вход", class: "btn btn-outline-info btn-block" %>
            </div>
          <% end %>
        </div>
        <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
          <span>Нет аккаунта?</span></p>
        <div class="card-body">
          <a href="register-with-bg-image.html" class="btn btn-outline-danger btn-block"><i class="la la-user"></i>
            Зарегистрироватсья</a>
        </div>
      </div>
    </div>
  </div>
</section>
