<div class="content-wrapper">

  <div class="card p-2">
    <h1><%= @product.title %></h1>

    <div class="image">
      <% @product.photos.each do |photo| %>
        <%= image_tag photo.image_url if photo.image_url.present? %>
      <% end %>
    </div>

    <dl>
      <dt>Sku:</dt>
      <dd><%= @product.sku %></dd>
      <dt>Barcode:</dt>
      <dd><%= @product.barcode %></dd>
    </dl>
  </div>

