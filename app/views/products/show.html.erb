      <%#= render Chartjs::Component.new(data: @orders.group_by_date_with_zero) %>


  <div class="card p-2">
    <%= column_chart [
                     { name: 'Заказы', data: @orders.group_by_date_with_zero},
                     { name: 'Продажи', data: @sales.group_by_date_with_zero },
                     # { name: 'Невыкупы', data: @orders.canceled.group_by_day(:date, format: "%F").count },
                     # { name: 'Возвраты', data: @sales.canceled.group_by_day(:date, format: "%F").count },
                   ]
    %>
  </div>

  <br>

  <div class="card p-2">
    <h2>Ключевые слова</h2>

    <table class="table">
      <thea>
        <th>Запросы</th>
        <th>Количество</th>
      </thea>

      <% @product.keywords.each do |keyword| %>
        <tr>
          <td><%= keyword.name %></td>
          <td><%= keyword.requests_count %></td>
<!--          <td><%#= keyword.results.map(data) %></td>-->
        </tr>
      <% end %>
    </table>
  </div>

  <div class="card p-2">
    <h2>Часы заказов на основе: <%= @product.orders.size %> заказов</h2>

    <%= column_chart @product.orders.group_by_hour_of_day(:date, format: "%H:%M").count, label: "Заказы" %>


    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>
