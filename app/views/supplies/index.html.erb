<div class="card">
  <table class="table table-striped table-hover table-sm">
    <thead>
    <tr>
      <th scope="col">Номер</th>
      <th scope="col">Дата заказа</th>
      <th scope="col">Дата Прихода</th>
      <th scope="col">Товары</th>
      <th>Общее количество</th>

    </tr>
    </thead>

    <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= link_to supply.name, supply_path(supply) %></td>
        <td><%= supply.data['order_date'] %></td>
        <td><%= supply.data['delivered_date'] %></td>

        <td>
          <% supply.supply_products.each do |sp| %>
            <image width="64px" class="rounded-circle" src="<%= sp.product.photos.first.image.url %>"></image>
          <% end %>
        </td>
        <%#= link_to icon('edit'), edit_supply_path(supply) %>
        <%#= link_to icon('eye'), supply %>
        <td><%= supply.all_product_count %></td>

        <!--        <td><%#= button_to icon('trash'), supply, method: :delete %></td>-->

      </tr>

    <% end %>
    </tbody>
  </table>
</div>